# Root .env for docker-compose
# Copy this to .env and fill in real values locally. Do NOT commit .env

POSTGRES_USER=garage_user
POSTGRES_PASSWORD=garage_pass
POSTGRES_DB=garage_buddy

# JWT secret (must be at least 256 bits)
GARAGEBUDDY_JWT_SECRET=replace-with-secure-random-256-bit-secret-for-production

# Mail (dev SMTP placeholder - use Mailtrap or similar)
SPRING_MAIL_HOST=smtp.mailtrap.io
SPRING_MAIL_PORT=2525
SPRING_MAIL_USERNAME=your-mailtrap-username
SPRING_MAIL_PASSWORD=your-mailtrap-password

# Reminder cron (daily at 7am by default)
GARAGEBUDDY_REMINDER_CRON=0 0 7 * * ?

# Email notifications enabled (false for dev, true for prod)
GARAGEBUDDY_EMAIL_ENABLED=false
