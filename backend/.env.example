# Backend environment placeholders
# Copy this file to .env and fill in real values locally. Do NOT commit .env

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/garage_buddy
SPRING_DATASOURCE_USERNAME=garage_user
SPRING_DATASOURCE_PASSWORD=garage_pass

# JWT
GARAGEBUDDY_JWT_SECRET=change-me-replace-with-secure-random
GARAGEBUDDY_JWT_VALIDITY_MS=86400000

# Mail (development placeholder - use Mailtrap or other dev SMTP)
SPRING_MAIL_HOST=smtp.mailtrap.io
SPRING_MAIL_PORT=2525
SPRING_MAIL_USERNAME=your-mailtrap-username
SPRING_MAIL_PASSWORD=your-mailtrap-password
GARAGEBUDDY_MAIL_FROM=no-reply@garagebuddy.local

# Scheduler
GARAGEBUDDY_REMINDER_CRON=0 0 7 * * ?
